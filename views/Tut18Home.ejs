<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            background-color: #e6f2ff; /* Soft light blue */
            font-family: Arial, sans-serif;
            color: #333;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #4d79ff; /* Muted dark blue */
        }

        form {
            margin: 20px auto;
            width: 60%;
            background-color: #ffffff; /* White background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 10px;
            font-size: 16px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 16px;
        }

        button {
            background-color: #80bfff; /* Light blue */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #4d94ff; /* Slightly darker blue on hover */
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #f9f9f9; /* Light grey table background */
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #80bfff; /* Light blue for headers */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Alternating light grey */
        }

        tr:hover {
            background-color: #d9e6f2; /* Light grey-blue hover */
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
</head>
<body>

   <h1>URL Shortener</h1>

   <% if (locals.id) { %>
      <p>URL Generated: <a href="http://localhost:8001/shortner/<%= id %>">http://localhost:8001/shortner/<%= id %></a></p>
   <% } %>

   <div>
      <form method="POST" action="/url">
         <label>Enter Your Original URL</label>
         <input 
          type="text" 
          name="url" 
          placeholder="https://example.com"
          required>
          <button type="submit">Generate</button>
      </form>
    </div>

    <div>
        <% if (locals.urls) { %>
           <table>
              <thead>
                  <tr>
                      <th>Sr. No</th>
                      <th>Short ID</th>
                      <th>Redirect</th>
                      <th>Clicks</th>
                  </tr>
              </thead>
              <tbody>
                <% urls.forEach((url, index) => { %>
                   <tr>
                     <td><%= index + 1 %></td>
                     <td><%= url.shortId %></td>
                     <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
                     <td><%= url.visitHistory.length %></td>
                   </tr> 
                <% }) %>
             </tbody>             
           </table>
        <% } %>
    </div>
</body>
</html>