<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard - URL Shortener</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(to right, #e0eafc, #cfdef3);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      padding: 30px 15px;
    }

    h1 {
      text-align: center;
      color: #2b2e4a;
      font-size: 32px;
      margin-bottom: 25px;
    }

    .url-message {
      text-align: center;
      margin-bottom: 20px;
      font-size: 16px;
    }

    .url-message a {
      color: #3f72af;
      font-weight: bold;
      text-decoration: none;
    }

    .url-message a:hover {
      text-decoration: underline;
    }

    form {
      margin: 0 auto;
      width: 100%;
      max-width: 600px;
      background-color: #ffffff;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      display: flex;
      flex-direction: column;
      gap: 15px;
      margin-bottom: 40px;
    }

    label {
      font-weight: 600;
      font-size: 16px;
      color: #2b2e4a;
    }

    input[type="text"] {
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 15px;
    }

    .button-group {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
    }

    button {
      padding: 10px 18px;
      background-color: #3f72af;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #2b5fa0;
    }

    table {
      width: 100%;
      max-width: 960px;
      margin: 0 auto;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 6px 12px rgba(0,0,0,0.1);
      border-radius: 12px;
      overflow: hidden;
    }

    th, td {
      padding: 14px;
      text-align: center;
      border-bottom: 1px solid #eee;
      font-size: 15px;
    }

    th {
      background-color: #3f72af;
      color: white;
    }

    tr:nth-child(even) {
      background-color: #f7faff;
    }

    tr:hover {
      background-color: #e3ecf7;
    }

    @media (max-width: 600px) {
      form {
        padding: 20px;
      }

      table {
        font-size: 14px;
      }

      th, td {
        padding: 10px;
      }

      .button-group {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>

  <h1>Welcome to Your Dashboard</h1>

  <% if (locals.id) { %>
    <div class="url-message">
      URL Generated: <a href="http://localhost:8001/shortner/<%= id %>">http://localhost:8001/shortner/<%= id %></a>
    </div>
  <% } %>

  <form method="POST" action="/url">
    <label>Enter Your Original URL</label>
    <input type="text" name="url" placeholder="https://example.com" required />
    <p style="text-align: center; color: #b22222; font-size: 14px; margin-bottom: 8px;">
         *Note : "See All URLs" is accessible to admin users only.
    </p>
    <div class="button-group">
      <button type="submit">Generate</button>
      <button type="button" onclick="window.location.href='/admin/urls'">See All URLs</button>
      <button type="button" onclick="window.location.href='/'">Home</button>
      <button type="button" onclick="window.location.href='/logout'">Logout</button>
    </div>
  </form>

  <% if (locals.urls) { %>
    <table>
      <thead>
        <tr>
          <th>Sr. No</th>
          <th>Short ID</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
